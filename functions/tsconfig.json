{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "paths":{
      "@config/*": ["./src/config/*"],
      "@middleware/*": ["./src/middleware/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
}
