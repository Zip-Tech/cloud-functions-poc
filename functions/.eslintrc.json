{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint-config-zip/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["tsconfig.json", "tsconfig.dev.json", "jest.config.js"],
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "import",
    "jest"
  ],
  "rules": {
    "@typescript-eslint/ban-ts-ignore": "off"
  }
}
